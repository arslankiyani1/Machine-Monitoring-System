{
  "Sentry": {
    "Dsn": "YOUR_SENTRY_DSN",
    "Environment": "Development",
    "TracesSampleRate": 0.0,
    "Debug": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Sentry": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Microsoft.EntityFrameworkCore.Query": "Error"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss.fff "
      }
    }
  },
  "LoggingFeatures": {
    "CaptureBodies": true,
    "SampleRate": 1.0,
    "MaxBodyChars": 4000,
    "MaskKeys": [
      "password",
      "pwd",
      "token",
      "authorization",
      "apiKey",
      "pin",
      "bankId",
      "bearer"
    ],
    "IncludeHeaders": true,
    "ExcludePaths": [
      "/health",
      "/metrics",
      "/swagger"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_POSTGRESQL_HOST;Port=5432;Database=YOUR_DATABASE;Username=YOUR_USERNAME;Password=YOUR_PASSWORD;SslMode=Require;Trust Server Certificate=true;"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "Keycloak": {
    "Realm": "master",
    "KeyCloakUrl": "YOUR_KEYCLOAK_URL",
    "ClientId": "admin-cli",
    "AdminUserName": "YOUR_ADMIN_USERNAME",
    "AdminPassword": "YOUR_ADMIN_PASSWORD"
  },
  "EmailSetting": {
    "MailServer": "smtp.gmail.com",
    "MailServerPort": "587",
    "MailServerUserName": "YOUR_EMAIL",
    "MailServerPassword": "YOUR_APP_PASSWORD",
    "EnableSsl": "true",
    "IsTestModel": "false",
    "DefaultFromEmail": "YOUR_EMAIL"
  },
  "JWT": {
    "ValidAudience": "",
    "ValidIssuer": "",
    "Secret": ""
  },
  "Emails": {
    "ContactUsEmails": ""
  },
  "RabbitMQ": {
    "Host": "YOUR_RABBITMQ_HOST",
    "Username": "YOUR_USERNAME",
    "Password": "YOUR_PASSWORD",
    "QueueName": "orderQueues",
    "VirtualHost": "/",
    "UseSsl": false
  },
  "Cosmos": {
    "EndpointUri": "YOUR_COSMOS_ENDPOINT",
    "PrimaryKey": "YOUR_COSMOS_PRIMARY_KEY",
    "DatabaseName": "YOUR_DATABASE_NAME",
    "ContainerName": "MachineSensorData"
  },
  "BlobStorage": {
    "ConnectionString": "YOUR_BLOB_STORAGE_CONNECTION_STRING",
    "ContainerName": "mms-container"
  },
  "RedisCache": {
    "ConnectionString": "YOUR_REDIS_CONNECTION_STRING",
    "Database": 0,
    "InstanceName": "MMS"
  },
  "Stripe": {
    "PublishableKey": "YOUR_STRIPE_PUBLISHABLE_KEY",
    "SecretKey": "YOUR_STRIPE_SECRET_KEY"
  },
  "FirebaseConfig": {
    "ProjectId": "YOUR_FIREBASE_PROJECT_ID",
    "ClientEmail": "YOUR_FIREBASE_CLIENT_EMAIL",
    "PrivateKey": "YOUR_FIREBASE_PRIVATE_KEY"
  },
  "Jobs": {
    "HistoricalStatsJob": {
      "RunTimeUtc": "02:00:00"
    },
    "ScheduledReportJob": {
      "RunTimeUtc": "12:00:00"
    }
  },
  "MqttSettings": {
    "HubHostName": "YOUR_IOT_HUB_HOSTNAME",
    "DeviceId": "YOUR_DEVICE_ID",
    "DeviceKey": "YOUR_DEVICE_KEY"
  },
  "AzureIoTListener": {
    "BlobStorageConnectionString": "YOUR_BLOB_CONNECTION_STRING",
    "BlobContainerName": "eventhub-checkpoints",
    "EventHubConnectionString": "YOUR_EVENTHUB_CONNECTION_STRING",
    "EventHubName": "YOUR_EVENTHUB_NAME",
    "ConsumerGroup": "listener-app"
  },
  "Twilio": {
    "AccountSid": "YOUR_ACCOUNT_SID",
    "AuthToken": "YOUR_AUTH_TOKEN",
    "FromNumber": "+15551234567",
    "OfflineAlertTemplate": "Alert: Machine {MachineName} went offline at {Time}. Please check immediately.",
    "Retry": {
      "MaxRetries": 3,
      "InitialDelayMs": 1000,
      "MaxDelayMs": 30000
    }
  }
}
